<Window x:Class="WpfTutorialSamples.Dialogs.OpenFileDialogSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OpenFileDialogSample" Height="300" Width="300">
	<DockPanel Margin="10">
		<WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
			<Button x:Name="btnOpenFile" Click="btnOpenFile_Click" Content="Open file" Width="75"/>
			<Button x:Name="btnConvert" Click="btnbtnConvert_Click" Content="Convert" Width="75"/>
		</WrapPanel>
		<TextBox Name="txtEditor" />
	</DockPanel>
</Window>